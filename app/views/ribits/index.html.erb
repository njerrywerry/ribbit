<% if current_user %>
<div id="createRibbit" class="panel right">
    <h1>Create a Cuckoo</h1>
    <p>
    <%= form_for @ribit do |f| %>
        <%= f.text_area :content, class: 'ribbitText' %>
        <%= f.submit "Cuckoo!" %>
    <% end %>
    </p>
</div>
<% end %>
<div class="panel left">
    <h1>Public Cuckoos</h1>
    <% @ribits.each do |ribit| %>
        <div class="ribbitWrapper">
            <a href="<%= user_path ribit.user %>">
            <img class="avatar" src="<%= ribit.user.avatar_url %>">
            <span class="name"><%= ribit.user.name %></span>
            </a>
            @<%= ribit.user.username %>
            <span class="time"><%= time_ago_in_words(ribit.created_at) %></span>
            <p> <%= ribit.content %> </p>
        </div>
    <% end %>
</div>
